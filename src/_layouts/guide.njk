---
layout: base
---

<section class="container page-grid mt-space-large mb-space-giant">

    <nav class="chapters page-grid mb-space-giant" style="grid-column: 1 / 13;">
        <input type="checkbox" id="chaptersState" class="css-toggle">
        <label for="chaptersState" class="nav-title css-toggle-control align-self-baseline" style="grid-column: 1 / 3;">
            <b>Chapters</b>
            <span class="icon icon-small css-toggle-indicator d-laptop-none" role="figure">
                <svg xmlns="http://www.w3.org/2000/svg" class="css-toggle-indicator-open" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20v-8m0 0V4m0 8h8m-8 0H4"/></svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="css-toggle-indicator-close"  width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 12H4"/></svg>
            </span>
        </label>
        <ul class="nav nav-chapters gx-laptop-space-large mt-space-tiny mt-laptop-space-none" style="grid-column: 3 / 13;">
            {% for item in collections.guide | eleventyNavigation %}
                {% if item.url %}
                    {% set isCurrent = (item.url == page.url) %}
                    {% set isParent = item.url != '/' and item.url in page.url %}
                    <li>
                        <a 
                            href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}" 
                            class="nav-link{% if isCurrent %} selected{% endif %}" 
                            {% if isCurrent %}aria-current="page"{% endif %}>
                            <span class="nav-number" aria-hidden="true">0{{ loop.index }}</span>
                            {{ item.title }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>

    <article class="format" role="article" style="grid-column: 3 / 11; grid-row: 2 / 3;">
        {{ content | safe}}
    </article>
</section>